<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_below="@id/logo_img"
        android:id="@+id/lock_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/basic_margin"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/color_lock"
        android:background="@drawable/lock" />

    <Button
        android:layout_below="@id/lock_img"
        android:id="@+id/pay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/basic_margin"
        android:layout_marginLeft="@dimen/basic_margin"
        android:layout_marginRight="@dimen/basic_margin"
        android:background="@drawable/pay_btn_background"
        android:text="@string/pay_content"
        android:textColor="@color/color_pay_text"
        android:textSize="@dimen/card_diff_text_size"
        android:fontFamily="sans-serif-light"
        android:textAppearance="@android:style/TextAppearance.Large" />

</RelativeLayout>